
{
    "manifest_version": 3,
    "name": "thon",
    "version": "1.0", 
    "description": "hackathon project",
    "host_permissions": ["https://*/*"],
    "content_scripts": [
        {
          "matches": ["http://*/*", "https://*/*, <all_urls>"],
          "js": ["app.js"],
          "css": ["style.css"]
        }
      ],
      "action": {
        "default_popup": "index.html"
      }, 
      "background": {},
      "permissions": ["tabs", "activeTab", "downloads", "scripting"]
}
  